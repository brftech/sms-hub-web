# Enable strict peer dependencies
auto-install-peers=true
strict-peer-dependencies=false

# Ensure workspace packages are properly linked
link-workspace-packages=deep

# Help Vercel resolve workspace dependencies
enable-pre-post-scripts=true

# Performance optimizations
store-dir=~/.pnpm-store
frozen-lockfile=true
prefer-frozen-lockfile=true
registry-supports-pre-release-metadata=true

# Monorepo-specific optimizations
ignore-workspace-root-check=true
hoist-workspace-packages=true
shamefully-hoist=true

# Vercel build optimizations
side-effects-cache=true
side-effects-cache-readonly=false