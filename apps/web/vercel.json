{
  "rewrites": [
    {
      "source": "/((?!api|favicon.ico|.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/dons-burlingame",
      "destination": "/donsbt",
      "permanent": true
    },
    {
      "source": "/michaels-tobacco",
      "destination": "/clients/michaelsTobacco",
      "permanent": true
    },
    {
      "source": "/1st-round-ammo",
      "destination": "/clients/firstRoundAmmo",
      "permanent": true
    },
    {
      "source": "/harlem-cigar",
      "destination": "/clients/harlemCigar",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
