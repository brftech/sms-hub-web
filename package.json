{
  "name": "sms-hub-monorepo",
  "private": true,
  "type": "module",
  "description": "Multi-hub SMS B2B SaaS platform with Gnymble, PercyMD, PercyTech, and PercyText",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "db:generate-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > packages/types/src/database-comprehensive.ts",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "export:phone": "node scripts/export-phone-component.js",
    "export:phone:event": "node scripts/export-phone-component.js 0",
    "export:phone:arrivals": "node scripts/export-phone-component.js 1",
    "export:phone:news": "node scripts/export-phone-component.js 2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "@types/react": "^19.1.0",
      "@types/react-dom": "^19.1.1",
      "typescript": "^5.9.2",
      "styled-components": "^6.1.13",
      "@types/styled-components": "^5.1.34"
    },
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "@types/react",
        "@types/react-dom"
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@turbo/gen": "^2.5.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
