{
  "name": "sms-hub-monorepo",
  "private": true,
  "type": "module",
  "description": "Multi-hub SMS B2B SaaS platform with Gnymble, PercyMD, PercyTech, and PercyText",
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@sms-hub/web",
    "dev": "turbo run dev",
    "dev:remote": "./scripts/shell/dev-remote.sh",
    "dev:web": "./scripts/shell/dev.sh --web-only",
    "dev:unified": "./scripts/shell/dev.sh --unified-only",
    "deploy:web": "cd apps/web && vercel --prod --yes",
    "deploy:unified": "cd apps/unified && vercel --prod --yes",
    "deploy:all": "npm run deploy:web && npm run deploy:unified",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "jest --config=config/jest.config.js --testPathPattern=test/unit",
    "test:integration": "jest --config=config/jest.config.js --testPathPattern=test/integration",
    "test:e2e": "playwright test --config=config/playwright.config.ts",
    "test:watch": "jest --config=config/jest.config.js --watch",
    "test:coverage": "jest --config=config/jest.config.js --coverage",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > packages/types/src/database-comprehensive.ts",
    "db:link:dev": "npx supabase link --project-ref vgpovgpwqkjnpnrjelyg",
    "db:link:prod": "npx supabase link --project-ref howjinnvvtvaufihwers",
    "db:push:dev": "pnpm db:link:dev && npx supabase db push --include-all",
    "db:push:prod": "pnpm db:link:prod && npx supabase db push --include-all",
    "functions:deploy": "npx supabase functions deploy --all",
    "functions:deploy:dev": "pnpm db:link:dev && pnpm functions:deploy",
    "functions:deploy:prod": "pnpm db:link:prod && pnpm functions:deploy",
    "sync:migrations": "./scripts/shell/sync-databases.sh migrations",
    "sync:functions": "./scripts/shell/sync-databases.sh functions",
    "sync:superadmin": "./scripts/shell/sync-databases.sh superadmin",
    "sync:verify": "./scripts/shell/sync-databases.sh verify",
    "sync:full": "./scripts/shell/sync-databases.sh full",
    "sync": "./scripts/shell/sync-databases.sh",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "@types/react": "^19.1.0",
      "@types/react-dom": "^19.1.1",
      "typescript": "^5.9.2",
      "styled-components": "^6.1.13",
      "@types/styled-components": "^5.1.34"
    },
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "@types/react",
        "@types/react-dom"
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.42.1",
    "@supabase/supabase-js": "^2.57.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@turbo/gen": "^2.5.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^16.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
