{
  "name": "sms-hub-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000 --host",
    "build": "vite build",
    "build:check": "npm run type-check && npm run lint:dev && npm run build",
    "build:analyze": "npm run build && npm run analyze",
    "preview": "vite preview --port 4173",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:dev": "eslint src --ext .ts,.tsx --max-warnings 100",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --project tsconfig.test.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:e2e": "cd config && playwright test",
    "test:e2e:ui": "cd config && playwright test --ui",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite .vercel",
    "analyze": "vite-bundle-analyzer dist/assets/*.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "setup": "bash scripts/dev-setup.sh",
    "prepare": "husky install && npm run type-check && npm run lint:check",
    "postinstall": "npm run clean"
  },
  "dependencies": {
    "@sms-hub/clients": "file:./packages/clients",
    "@sms-hub/hub-logic": "file:./packages/hub-logic",
    "@sms-hub/supabase": "file:./packages/supabase",
    "@sms-hub/ui": "file:./packages/ui",
    "@sms-hub/utils": "file:./packages/utils",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.56.2",
    "@types/styled-components": "^5.1.34",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "styled-components": "^6.1.19",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.9",
    "postcss": "^8.4.47",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^0.11.0",
    "vitest": "^3.2.4",
    "web-vitals": "^4.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
