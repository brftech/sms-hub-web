{
  "name": "sms-hub-monorepo",
  "private": true,
  "description": "Multi-hub SMS B2B SaaS platform with Gnymble, PercyMD, PercyTech, and PercyText",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "db:generate-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > packages/types/src/database-comprehensive.ts",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "@types/react": "^19.1.0",
      "@types/react-dom": "^19.1.1"
    }
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.6",
    "@types/node": "^22.15.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@playwright/test": "^1.42.1",
    "identity-obj-proxy": "^3.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
